@model List<FS_Project.Context.TacGia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout_Admin.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tác giả</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách tác giả</h6>
            <a style="text-decoration: none" href="/admin/TacGia/ThemTacGia">
                <h6 style=" padding: 1%;">Thêm tác giả <i class="fa-solid fa-circle-plus"></i></h6>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên tác giả</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tg in Model)
                        {
                            <tr>
                                <td>@tg.id_TacGia</td>
                                <td>@tg.TenTacGia</td>
                                <td><a href="/admin/TacGia/CapNhatTacGia/@tg.id_TacGia"><i class="fa-regular fa-pen-to-square"></i></a></td>
                                <td>
                                    @Ajax.ActionLink("Xóa", "XoaTacGia", new { @id = tg.id_TacGia }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa tác giả này?",
                                   OnComplete = "$('#row_" + tg.id_TacGia + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

