@model IEnumerable<FS_Project.Context.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_Layout_Admin.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tài khoản</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
            <a style="text-decoration: none" href="/admin/UserTK/Create">
                <h6 style=" padding: 1%;">Thêm người dùng <i class="fa-solid fa-circle-plus"></i></h6>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Họ tên</th>
                            <th>Giới tính</th>
                            <th>Email</th>
                            <th>Tài khoản</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.id_User</td>
                                <td>@user.HoTen</td>
                                <td>@user.GioiTinh</td>
                                <td>@user.Email</td>
                                <td>@user.UserName</td>
                                <td><a href="/admin/UserTK/Edit/?id=@user.id_User"><i class="fa-regular fa-pen-to-square"></i></a></td>
                                <td>
                                    @Ajax.ActionLink("Xóa", "Delete", new { @id = user.id_User }, new AjaxOptions
                               {
                                   Confirm = "Bạn có muốn xóa người dùng này?",
                                   OnComplete = "$('#row_" + user.id_User + "').remove()",
                                   HttpMethod = "Delete"
                               })
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
