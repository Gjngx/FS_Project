@model FS_Project.Context.ChuongTruyen

@{
    ViewBag.Title = "ThemChuong";
    Layout = "~/Areas/admin/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="~/Content/StyleThemTruyen.css">


<div class="tieude">
    <h2>Thêm chương</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.id_Truyen, "Tên truyện", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("id_truyen", (IEnumerable<SelectListItem>)ViewBag.dstruyen, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_Truyen, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="combox">
            <div class="line"></div>
            <div class="form-group ">
                @Html.LabelFor(model => model.TenChuong, "Tên chương", htmlAttributes: new { @class = "control-label col-md-2 comboxtieude" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenChuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenChuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.tieuDe, "Tiêu đề", htmlAttributes: new { @class = "control-label col-md-2 comboxtieude" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tieuDe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tieuDe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoChuong, "Số chương", htmlAttributes: new { @class = "control-label col-md-2 comboxtieude" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoChuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoChuong, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="line"></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NoiDungChu, "Nội dung chữ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDungChu, htmlAttributes: new { @class = "noidungchu" })
                @Html.ValidationMessageFor(model => model.NoiDungChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group btn-them">
            <div class="btn btn-success btn-icon-split">
                <span class="icon text-white-100">
                    <i class="fas fa-check"></i>
                </span>
                <input type="submit" value="Thêm chương" class="btn btn-default" style="color: white;" />
            </div>
        </div>
    </div>
}