
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var truyennoibat = (List<FS_Project.Context.Truyen>)ViewBag.truyennoibat;
    var truyenmoi = (List<FS_Project.Context.Truyen>)ViewBag.truyenmoi;
}

<div class="body" style="margin: 60px 70px;">
    <div class="truyennoibat" style="display: block; padding: 10px; background-color: white; border-radius: 5px;">
        <h2 class="txttnb" style="text-align: center;"><i>Truyện nổi bật</i></h2>
        <div class="row1" style="display: grid; grid-template-columns: repeat(5, minmax(0px, 1fr)); text-align: center;">
            @foreach (var tnb in truyennoibat)
            {
                <div class="tnb">
                    <a style="text-decoration: none; color: black" href="@Url.Action("Index","ChiTietTruyen", new {id = tnb.id_Truyen})">
                        <img style="width: 90%; border-radius: 4px;" src="~/images/imgTruyen/@tnb.AnhTruyen" title="@tnb.AnhTruyen">
                        <h4>@tnb.TenTruyen</h4>
                    </a>
                </div>
            }
        </div>
    </div>
    <div style="background-color: #ebebeb; height: 10px;"></div>
    <div class="main">
        <div class="truyenmoi" style="display: block; padding: 10px; background-color: white; border-radius: 5px; text-align: center;">
            <h2 class="txttm" style="text-align: center;"><i>Truyện mới</i></h2>
            <div class="row2" style="display: grid; grid-template-columns: repeat(4, minmax(0px, 1fr)); text-align: center;">
                @foreach (var tm in truyenmoi)
                {
                    <div class="tm">
                        <a style="text-decoration: none; color: black" href="@Url.Action("Index","ChiTietTruyen", new {id = tm.id_Truyen})">
                            <img style="width: 90%; border-radius: 4px;" src="~/images/imgTruyen/@tm.AnhTruyen" title="@tm.TenTruyen">
                            <h4>@tm.TenTruyen</h4>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
