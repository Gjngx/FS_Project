@model FS_Project.Context.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    var session = (FS_Project.Common.UserLogin)Session[FS_Project.Common.Constants.USER_SESSION];
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/TrangChu/Index">Trang Chủ</a></li>
        <li class="breadcrumb-item active" aria-current="page">Thông tin người dùng</li>
    </ol>
</nav>
<div class="wrapper">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/ManageAccount/Index/@session.ID">Thông tin người dùng</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/ManageAccount/Edit/@Model.id_User">Cập nhập thông tin</a>
        </li>
    </ul>
    <div class="container">
        <div class="row justify-content-around">
            <form class="col-md-6 image-user">
                <img src="https://ui-avatars.com/api/?name= @session.UserName" class="rounded mx-auto d-block" alt="Info_User">
                <div class="form-group">
                    <label for="fullname">Họ và tên</label>
                    <input type="text" value="@Model.HoTen" id="fullname" class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label for="GioiTinh">Giới Tính</label>
                    <input type="text" value="@Model.GioiTinh" id="GioiTinh" class="form-control" disabled>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="text" value="@Model.Email" id="Email" class="form-control" disabled>

                </div>
            </form>
        </div>
    </div>
</div>



